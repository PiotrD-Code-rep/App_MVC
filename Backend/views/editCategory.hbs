<div class="container py-5">
  <div class="row justify-content-center">
    <h1>Edytuj Katygorie</h1>
    <form action="/AdminPanel/categories/edit/{{katygorie._id}}" method="POST">

      <div class="mb-4">
        <label for="nazwa_katygori" class="form-label">Nazwa Katygori:</label><br>
        <input type="text" class="form-control" id="nazwa_katygori" name="nazwa_katygori" value="{{katygorie.nazwa_katygori}}" required/>
      </div>
    
      <br>
      <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
      <a href="/AdminPanel/categories" class="btn btn-secondary ms-2">Anuluj</a>
    </form>
  </div>
</div>



