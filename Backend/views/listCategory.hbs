<div class="container py-5">
  <h1>Lista katygori</h1>
  <a class="btn btn-primary mb-2 mt-2" href="/AdminPanel/categories/create">Dodaj nowy katygorie</a>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nazwa Katygorii</th>
          <th>Akcje</th>
        </tr>
      </thead>
      <tbody>
        {{#each katygorie}}
        <tr>
          <td>{{this.nazwa_katygori}}</td>
          <td>
            <a class="btn btn-warning btn-sm" href="/AdminPanel/categories/edit/{{this._id}}">Edytuj</a>
            <a class="btn btn-danger btn-sm" href="/AdminPanel/categories/delete/{{this._id}}">Usu≈Ñ</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>



