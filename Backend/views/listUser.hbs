<div class="container py-5">
  <h1>Lista Użytkowników</h1>
  <a class="btn btn-primary mb-2 mt-2" href="/AdminPanel/Users/create">Dodaj nowy produkt</a>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Imię</th>
          <th>Nazwisko</th>
          <th>Email</th>
          <th>Admin</th>
          <th>Akcje</th>
        </tr>
      </thead>
      <tbody>
        {{#each uzytkownicy}}
        <tr>
          <td>{{this.imie}}</td>
          <td>{{this.nazwisko}}</td>
          <td>{{this.email}}</td>
          <td>{{#if this.admin}}Tak{{else}}Nie{{/if}}</td>
          <td>
            <a class="btn btn-warning btn-sm" href="/AdminPanel/Users/edit/{{this._id}}">Edytuj</a>
            <a class="btn btn-danger btn-sm" href="/AdminPanel/Users/delete/{{this._id}}" onclick="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">Usuń</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>



