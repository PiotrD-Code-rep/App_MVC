<div class="container mt-5">
  <h2>Rejestracja</h2>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form method="POST" action="/register">
    <div class="mb-3">
      <label for="registerFirstname" class="form-label">Imię</label>
      <input type="text" name="imie" class="form-control" id="registerFirstname" required>
    </div>
    <div class="mb-3">
      <label for="registerLastname" class="form-label">Nazwisko</label>
      <input type="text" name="nazwisko" class="form-control" id="registerLastname" required>
    </div>
    <div class="mb-3">
      <label for="registerEmail" class="form-label">Email</label>
      <input type="email" name="email" class="form-control" id="registerEmail" required>
    </div>
    <div class="mb-3">
      <label for="registerPassword" class="form-label">Hasło</label>
      <input type="password" name="haslo" class="form-control" id="registerPassword" required>
    </div>
    <div class="mb-3">
      <label for="registerConfirmPassword" class="form-label">Powtórz hasło</label>
      <input type="password" name="confirmHaslo" class="form-control" id="registerConfirmPassword" required>
    </div>
    <button type="submit" class="btn btn-primary">Zarejestruj</button>
  </form>

  <p class="mt-3">
    Masz już konto?
    <a href="/login">Zaloguj się</a>
  </p>
</div>